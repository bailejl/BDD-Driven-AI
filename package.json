{
  "name": "cucumber-declarative-gherkin",
  "version": "1.0.0",
  "description": "Demo of how to write declarative Gherkin",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "e2e": "start-server-and-test dev 4200 'wdio run features/wdio.conf.ts --cucumberOpts.tagExpression=\"not @brokenScenario\"'",
    "e2e:headless": "start-server-and-test dev 4200 'wdio run features/wdio-headless.conf.ts --cucumberOpts.tagExpression=\"not @brokenScenario\"'",
    "snippets": "cucumber-js -d features/**/*.feature"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bailejl/cucumber-declarative-gherkin.git"
  },
  "keywords": [
    "cucumber",
    "gherkin",
    "declarative",
    "declarative-gherkin",
    "bdd"
  ],
  "author": "Joe L. Bailey",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bailejl/cucumber-declarative-gherkin/issues"
  },
  "homepage": "https://github.com/bailejl/cucumber-declarative-gherkin#readme",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^5.1.1",
    "@mui/icons-material": "^6.0.0",
    "@mui/material": "^6.0.0",
    "@mui/x-date-pickers": "^7.0.0",
    "date-fns": "^2.30.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.0.0",
    "react-router-dom": "^7.0.0",
    "yup": "^1.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@mui/styles": "^6.4.12",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@wdio/cli": "^9.0.0",
    "@wdio/cucumber-framework": "^9.0.0",
    "@wdio/local-runner": "^9.0.0",
    "@wdio/spec-reporter": "^9.0.0",
    "babel-jest": "^30.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fs-extra": "^11.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "multiple-cucumber-html-reporter": "^3.9.2",
    "prettier": "^3.0.0",
    "sass-embedded": "^1.89.2",
    "start-server-and-test": "^2.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-svgr": "^4.3.0",
    "wdio-cucumber-reporter": "^0.0.2",
    "wdio-cucumberjs-json-reporter": "^6.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
